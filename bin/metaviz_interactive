#!/bin/bash

# Set defaults
LOCAL_BASE=''

while getopts :l:c: opt; do
  case $opt in
    l)
      LOCAL_BASE=$OPTARG
      ;;
    \?)
      echo "Invalid option: -$OPTARG" >&2
      exit 1
      ;;
    :)
      echo "Option -$OPTARG requires an argument." >&2
      exit 1
      ;;
  esac
done

if [[ "$(docker images -q umigs/chiron-metaviz 2> /dev/null)" == "" ]]; then
  echo "Docker image for MetaViz not found.  Downloading first ..."
fi

if [ -z $LOCAL_BASE ]; then
    if [ -w "/opt" ]; then
        LOCAL_BASE="/opt/chiron/metaviz"
    else
        LOCAL_BASE="${HOME}/chiron/metaviz"
    fi
fi

if [ ! -d ${LOCAL_BASE} ]; then
    echo "Creating local output directory: ${LOCAL_BASE}"
    mkdir -p ${LOCAL_BASE}
fi

ipaddr=$(curl http://169.254.169.254/latest/meta-data/public-ipv4)

docker run --rm -v ${HOME}/chiron/metaviz:/output -i -t -p 7474:7474 -p 8888:8888 -p 5000:5000 -e HOST_IP=$ipaddr umigs/chiron-metaviz bash
